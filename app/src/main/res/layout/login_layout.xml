<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bg"
        android:scaleType="centerCrop"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginStart="135px"
            android:layout_marginEnd="100px"
            android:gravity="center_vertical"
            android:theme="@style/CustomAppTheme_textinputLayout">

            <EditText
                android:id="@+id/txt_login_username"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:hint="@string/login_user_name"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/alpha_white"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>


        <View
            android:id="@+id/login_line1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="135px"
            android:layout_marginEnd="100px"
            android:background="@color/ced3d8" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginStart="135px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="100px"
            android:gravity="center_vertical"
            android:theme="@style/CustomAppTheme_textinputLayout">

            <EditText
                android:id="@+id/txt_login_password"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:hint="@string/login_user_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>


        <View
            android:id="@+id/login_lin2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="135px"
            android:layout_marginEnd="100px"
            android:background="@color/ced3d8" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginStart="145px"
            android:layout_marginEnd="110px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_register"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/immediate_registration"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/tv_forget_password"
                android:textColor="@color/white" />
        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:id="@+id/id_btn_login"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginStart="135px"
            android:layout_marginEnd="100px"
            android:background="@drawable/ll_btn_border"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white" />


    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="155px"
        android:layout_marginEnd="120px"
        android:layout_marginBottom="50px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="80px"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <View
                android:layout_width="80px"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical|right"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/quick_login"
                android:textColor="@color/white" />
        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_phone_login"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@drawable/login_phone" />

            <ImageView
                android:id="@+id/iv_wechat_login"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@drawable/login_wechat" />

            <ImageView
                android:id="@+id/barcode_login"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@drawable/login_saoma" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

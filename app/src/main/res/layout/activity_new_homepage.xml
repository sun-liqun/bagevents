<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--内容部分-->

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bagevent.view.MyLinearLayout
            android:id="@+id/myLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoFrameLayout
                android:id="@+id/fm_new_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </com.zhy.autolayout.AutoFrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="94px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_home_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="47dip"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_event_pandect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_event_pandect"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/myevent_uncheck" />

                        <TextView
                            android:id="@+id/tv_event_pandect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="@string/tv_event_pandect"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_dynamic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="visible"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_dynamic"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/dynamic_uncheck" />

                        <TextView
                            android:id="@+id/tv_dynamic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="@string/tv_dynamic"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_message"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoFrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_message"
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:src="@drawable/xiaoxihei" />

                            <View
                                android:id="@+id/v_unread"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="right"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/red_circle"
                                android:visibility="gone" />
                        </com.zhy.autolayout.AutoFrameLayout>

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="@string/tv_message"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_user_set"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_user_set"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/usermanager_uncheck" />

                        <TextView
                            android:id="@+id/tv_user_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="@string/tv_user_set"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/reply"
                        android:paddingLeft="10dip"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="80dip"
                        android:layout_height="match_parent"
                        android:background="#ff9000"
                        android:gravity="center"
                        android:text="@string/send"
                        android:textColor="@color/white" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoFrameLayout>

        </com.bagevent.view.MyLinearLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/fl_guide_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_guide_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="15dip"
                android:layout_marginBottom="110.5dip"
                android:src="@drawable/guide_sign" />
        </com.zhy.autolayout.AutoFrameLayout>


        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/fl_guide_sign_dynamic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_guide_sign_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="11dip"
                android:layout_marginBottom="87dip"
                android:src="@drawable/guide_sign_dynamic" />
        </com.zhy.autolayout.AutoFrameLayout>
    </com.zhy.autolayout.AutoFrameLayout>

    <!--左边菜单-->
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_left_menu"
        android:layout_width="314dip"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:background="#f5f5f5"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:drawableLeft="@drawable/icon_event"
                android:drawablePadding="4dip"
                android:text="@string/all_event"
                android:textColor="#202020"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dynamic_event_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text=""
                android:textColor="#fe9300"
                android:textStyle="bold" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_all_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dip"
                android:drawableLeft="@drawable/icon_gou"
                android:drawablePadding="4dip"
                android:text="@string/all"
                android:textColor="#fe9300" />
        </com.zhy.autolayout.AutoLinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/left_menu_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="15dip"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="94px">

            <TextView
                android:id="@+id/tv_left_menu_cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#FF9000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_left_menu_ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF9000"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--右边菜单-->
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_right_menu"
        android:layout_width="276dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_marginLeft="9dip"
            android:gravity="center_vertical"
            android:text="@string/quickly_filter"
            android:textColor="#898989"
            android:textSize="12sp" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:orientation="horizontal"
            android:paddingLeft="9dip"
            android:paddingRight="9dip">

            <TextView
                android:id="@+id/tv_filter_all"
                android:layout_width="124dip"
                android:layout_height="42dip"
                android:background="@drawable/dynamic_filter_select"
                android:drawableRight="@drawable/icon_gou"
                android:gravity="center"
                android:paddingLeft="35dip"
                android:paddingRight="35dip"
                android:text="@string/all"
                android:textColor="#ff9000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_filter_question"
                android:layout_width="124dip"
                android:layout_height="42dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/dynamic_filter_unselect"
                android:gravity="center"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:text="@string/tv_filter_question"
                android:textColor="#898989"
                android:textSize="12sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:layout_marginTop="7dip"
            android:orientation="horizontal"
            android:paddingLeft="9dip"
            android:paddingRight="9dip">

            <TextView
                android:id="@+id/tv_filter_publish"
                android:layout_width="124dip"
                android:layout_height="42dip"
                android:background="@drawable/dynamic_filter_unselect"
                android:gravity="center"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:text="@string/tv_filter_publish"
                android:textColor="#898989"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_filter_realy"
                android:layout_width="124dip"
                android:layout_height="42dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/dynamic_filter_unselect"
                android:gravity="center"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:text="@string/tv_filter_realy"
                android:textColor="#898989"
                android:textSize="12sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_filter_answer"
            android:layout_width="124dip"
            android:layout_height="42dip"
            android:layout_marginLeft="9dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/dynamic_filter_unselect"
            android:gravity="center"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:text="@string/tv_filter_answer"
            android:textColor="#898989"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="94px">

            <TextView
                android:id="@+id/tv_right_menu_canel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#FF9000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_right_menu_ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF9000"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v4.widget.DrawerLayout>
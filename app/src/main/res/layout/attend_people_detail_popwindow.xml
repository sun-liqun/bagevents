<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

   <!-- <View
        android:id="@+id/view_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ced3d8"/>

    <TextView
        android:id="@+id/tv_motify_userinfo"
        android:layout_width="match_parent"
        android:layout_height="105px"
        android:textColor="@color/black"
        android:text="@string/edit_attendee"
        android:gravity="center"
        android:textSize="32px"
        android:background="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ced3d8"/>
    <TextView
        android:id="@+id/tv_add_contact"
        android:layout_width="match_parent"
        android:layout_height="105px"
        android:textColor="@color/black"
        android:text="@string/add_to_contact"
        android:gravity="center"
        android:textSize="32px"
        android:background="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ced3d8"
        android:layout_marginTop="10px"/>

    <TextView
        android:id="@+id/tv_popup_cancel"
        android:layout_width="match_parent"
        android:layout_height="105px"
        android:textColor="@color/black"
        android:text="@string/cancel"
        android:textSize="32px"
        android:gravity="center"
        android:background="@color/white"/>


</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/e6edf2"
    android:id="@+id/ll_add_sponsor">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_event_sponsor_add_back"
            android:layout_width="60px"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20px"
                android:layout_height="34px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20px"
                android:src="@drawable/back" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/add_sponsor"
            android:textColor="@color/black"
            android:textSize="36px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_event_sponser_add_confirm"
            android:layout_width="60px"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20px"
                android:src="@mipmap/confirm" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="20px"
        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/sponsor_title"
            android:textSize="28px"
            android:layout_marginStart="20px"
            android:id="@+id/et_sponsor_name"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_clear_sponsor_name"
            android:layout_width="30px"
            android:layout_height="match_parent"
            android:src="@drawable/clear_text"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/et_sponsor_name"
            android:layout_marginEnd="20px"
            android:visibility="gone"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_event_sponsor_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_event_sponsor_logo"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_marginTop="20px"
            android:src="@drawable/sponsorbitmap"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="@string/add_logo"
            android:textSize="24px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/contact_tel"
                android:textSize="28px"
                android:layout_marginStart="20px"
                android:id="@+id/et_sponsor_phone"
                android:background="@null"
                android:inputType="number"/>
            <ImageView
                android:id="@+id/iv_clear_sponsor_phone"
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:src="@drawable/clear_text"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/et_sponsor_phone"
                android:layout_marginEnd="20px"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/e6edf2"
            android:layout_marginStart="20px"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/contact_email"
                android:textSize="28px"
                android:layout_marginStart="20px"
                android:id="@+id/et_sponsor_email"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_clear_sponsor_email"
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:src="@drawable/clear_text"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/et_sponsor_email"
                android:layout_marginEnd="20px"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/e6edf2"
            android:layout_marginStart="20px"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/net_address"
                android:textSize="28px"
                android:layout_marginStart="20px"
                android:id="@+id/et_sponsor_neturl"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_clear_sponsor_neturl"
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:src="@drawable/clear_text"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/et_sponsor_neturl"
                android:layout_marginEnd="20px"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/e6edf2"
            android:layout_marginStart="20px"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_sponsor_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20px"
                android:background="@null"
                android:hint="@string/introduction_organizer"
                android:textSize="28px" />
            <ImageView
                android:id="@+id/iv_clear_sponsor_introduce"
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:src="@drawable/clear_text"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/et_sponsor_introduce"
                android:layout_marginEnd="20px"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dip"
    android:layout_marginBottom="7dip"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="13dip"
        android:text=""
        android:textColor="#ff202020"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="39dip"
        android:layout_height="15dip"
        android:layout_below="@id/tv_activity_name"
        android:layout_alignLeft="@id/tv_activity_name"
        android:layout_marginTop="5dip"
        android:src="@drawable/collection" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_name"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/iv_status"
        android:text=""
        android:textColor="#ff898989"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/iv_status"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="12dip"
        android:background="#DDDDDD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dip"
        android:layout_marginBottom="13dip"
        android:drawableLeft="@drawable/icon_question_edit"
        android:drawablePadding="4dip"
        android:text="@string/edit"
        android:textColor="#ff545454"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dip"
        android:drawableLeft="@drawable/icon_look_data"
        android:drawablePadding="4dip"
        android:text="@string/data"
        android:textColor="#ff545454"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dip"
        android:layout_marginBottom="13dip"
        android:drawableLeft="@drawable/icon_question_more"
        android:drawablePadding="4dip"
        android:text="@string/more"
        android:textColor="#ff545454"
        android:textSize="12sp" />
</com.zhy.autolayout.AutoRelativeLayout>
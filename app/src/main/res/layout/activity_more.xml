<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".new_home.new_activity.MoreActivity">

    <include layout="@layout/common_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_login_in"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/white"
        android:gravity="center_vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="45px"
            android:id="@+id/ll_mark">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@drawable/sign_in" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_login_barcode"
                android:textColor="@color/black"
                android:textSize="28px"
                android:layout_marginStart="20px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:src="@drawable/inputicon"
            android:layout_marginEnd="20px"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/ll_mark" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e6edf2"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_check_in"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/white"
        android:gravity="center_vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="45px"
            android:id="@+id/ll_mark2">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@drawable/sign_in" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkin_set"
                android:textColor="@color/black"
                android:textSize="28px"
                android:layout_marginStart="20px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:src="@drawable/inputicon"
            android:layout_marginEnd="20px"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/ll_mark2" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e6edf2"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_collection_manager"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="45px"
            android:id="@+id/ll_mark1">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@drawable/collect_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_collect_manager"
                android:textColor="@color/black"
                android:textSize="28px"
                android:layout_marginStart="20px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:src="@drawable/inputicon"
            android:layout_marginEnd="20px"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/ll_mark1" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e6edf2"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_login_pc"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="45px"
            android:id="@+id/ll_pc">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@drawable/sign_in" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_pc"
                android:textColor="@color/black"
                android:textSize="28px"
                android:layout_marginStart="20px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:src="@drawable/inputicon"
            android:layout_marginEnd="20px"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/ll_pc" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_add_ticket_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ticket_free"
                android:textSize="32px"
                android:textColor="@color/black"
                android:layout_marginLeft="13dp"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"
                    android:textSize="14sp"
                    android:id="@+id/tv_a_money"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_ticket_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textSize="14sp"
                    android:textColor="#8e8e93"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#8e8e93"
                    android:text="|"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/tv_ticketnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/ticket_have"
                    android:textColor="#8e8e93"
                    android:visibility="visible"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/tv_residue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="9999"
                    android:textColor="#8e8e93"
                    android:textSize="14sp"
                    android:lines="1"/>
            </com.zhy.autolayout.AutoLinearLayout>



        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/ic_ticket_kuang"
            android:layout_gravity="center_vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/ll_reduce"
                android:paddingRight="10dp"
                android:background="@drawable/bg_right_border">

                <View
                    android:id="@+id/imageView"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:background="#8e8e93"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_add_ticketnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:lines="1"
                android:text="0"
                android:textColor="#ff9000"
                android:textSize="19sp" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="50px"
                android:layout_height="35dp"
                android:id="@+id/ll_plus"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:background="@drawable/bg_left_border">
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="25sp"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        android:layout_below="@+id/ll_layout"/>

</com.zhy.autolayout.AutoRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bg"
        android:scaleType="centerCrop"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="135px"
            android:layout_marginEnd="100px"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:theme="@style/CustomAppTheme_textinputLayout">

                <EditText
                    android:id="@+id/txt_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:hint="@string/login_user_name"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/alpha_white"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/alpha_white"
                android:text="@string/send_verification_code" />

        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:id="@+id/login_line1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="135px"
            android:layout_marginEnd="100px"
            android:background="@color/ced3d8" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginStart="135px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="100px"
            android:gravity="center_vertical"
            android:theme="@style/CustomAppTheme_textinputLayout">

            <EditText
                android:id="@+id/txt_login_code"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:hint="@string/login_user_code"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>


        <View
            android:id="@+id/login_lin2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="135px"
            android:layout_marginEnd="100px"
            android:background="@color/ced3d8" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginStart="135px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="100px"
            android:background="@drawable/ll_btn_border"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white" />


    </com.zhy.autolayout.AutoLinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:background="@drawable/exhibition_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="34dp"
                        android:src="@drawable/ic_back_white" />

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="11dp">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_exhibition_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="11dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/address" />

                                <TextView
                                    android:id="@+id/tv_boothHall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_boothNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="17dp"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:layout_gravity="center_vertical"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <ImageView
                            android:id="@+id/company_logo"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/white_bg"
                            android:visibility="gone"/>
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="139dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="32dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="2dp">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="29dp">

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:id="@+id/rl_haveAttendee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="27dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_attendeeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="179"
                                android:layout_marginLeft="35dp"
                                android:textColor="#202020"
                                android:textSize="30dp" />

                            <TextView
                                android:id="@+id/tv_toCollectionPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@drawable/arrow_right_aa"
                                android:drawablePadding="5dp"
                                android:text="@string/collect_people"
                                android:layout_marginRight="29dp"
                                android:textColor="#FFFF9000" />
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <View
                            android:id="@+id/view_divide"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#FFCCCCCC"
                            android:layout_marginBottom="23dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="29dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_my_invide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/my_envite"
                            android:textColor="#202020"
                            android:textSize="16sp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/ll_exhibitor_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_viewCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#202020"
                                    android:textSize="20sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/view_count"
                                    android:textColor="#FF545454"
                                    android:textSize="11sp" />
                            </com.zhy.autolayout.AutoLinearLayout>

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tv_favouriteNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#202020"
                                    android:textSize="20sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/favourite_num"
                                    android:textColor="#FF545454"
                                    android:textSize="11sp" />
                            </com.zhy.autolayout.AutoLinearLayout>

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tv_rank"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#202020"
                                    android:text="1"
                                    android:textSize="20sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rank"
                                    android:textColor="#FF545454"
                                    android:textSize="11sp" />
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <Button
                            android:id="@+id/btn_share"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/share_pic"
                            android:textColor="@color/white"
                            android:background="#FFFF9000"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="29dp"
                            android:layout_marginTop="29dp"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                </android.support.v7.widget.CardView>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_chat"
                android:textSize="16sp"
                android:textColor="#202020"
                android:layout_marginLeft="12dp"/>

        </com.zhy.autolayout.AutoLinearLayout>




</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ff9a3b">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_attend_title"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/ff9a3b">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_qr_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20px"
                android:layout_height="34px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/back" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_modity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/qr_code"
            android:textColor="@color/black"
            android:textSize="36px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_add_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical">
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_qrcode_collectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="36px"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_marginTop="30dp"
        android:text="@string/text_qr"
        android:layout_below="@+id/rl_attend_title"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/rl_attend_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_qr"
        android:layout_below="@+id/iv_qrcode"
        android:textSize="28px"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30px"
        android:layout_marginStart="40px"
        android:layout_marginEnd="40px"
        android:gravity="center"/>

</com.zhy.autolayout.AutoRelativeLayout>
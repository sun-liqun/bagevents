<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_attend_title"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_login_qrcode_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20px"
                android:layout_height="34px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/back" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_modity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_login_barcode"
            android:textColor="@color/black"
            android:textSize="36px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/login_qrcode"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_qrcode"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40px"
        android:layout_marginTop="30px"
        android:layout_marginEnd="40px"
        android:gravity="center"
        android:text="@string/text_qr1"
        android:textColor="@color/black"
        android:textSize="28px" />

</com.zhy.autolayout.AutoRelativeLayout>
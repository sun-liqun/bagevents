<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded"
    android:layout_marginTop="10dp">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_attend_title"
            android:layout_width="match_parent"
            android:layout_height="44px"
            android:text="A"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:textSize="28px"
            android:clickable="false"
            android:background="@color/e6edf2"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="136px"
            android:orientation="horizontal">
            <View
                android:id="@+id/view_check_line"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/a59C60A"
                android:visibility="gone"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/attend_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_attend_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:text=""
                    android:paddingLeft="18dp"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_ticketname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:paddingLeft="18dp"
                    android:text="@string/ticket_free"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>